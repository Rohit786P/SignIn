<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/back"
    android:scaleType = "centerCrop"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rsharma.simplesignin.LoginActivity"><![CDATA[



    android:layout_marginTop="30dp" />







    ]]>

    <TextView
        android:text="Sign In !"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:textColor="#1E90FF"
        android:textSize="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/textOfSignIn"
        tools:text="Sign In Please !"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:visibility="invisible"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/btSignIn"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="16"
        android:paddingBottom="8.7dp"
        android:textColor="#ffffff"
        android:drawableRight="@drawable/user"
        android:textColorHint="#ffffff"
        android:hint="Enter UserId"
        android:id="@+id/textOfUsername"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textOfSignIn"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="16"
        android:paddingBottom="8.7dp"
        android:maxLength="18"
        android:paddingTop="12dp"
        android:drawableRight="@drawable/lock"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="Enter Password"
        android:id="@+id/textOfPassword"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textOfUsername"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:id="@+id/btSignIn"
        android:textSize="25sp"
        android:textColor="@color/button_text"
        android:background="@drawable/button_background"
        android:onClick="moveToMessageActivity"
        android:paddingRight="33dp"
        android:text="     Sign in"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textOfPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Forgot Password"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:onClick="moveToMessageActivity"
        android:background="@drawable/fgpw"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/fgtpw"
        tools:text="Sign In Please !"
        android:layout_below="@+id/btSignIn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="Create an Account!"
        android:padding="2dp"
        android:textColor="#DA8B35"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:onClick="moveToMessageActivity"
        android:layout_height="wrap_content"
        android:id="@+id/createAc"
        android:layout_alignBaseline="@+id/fgtpw"
        android:layout_alignBottom="@+id/fgtpw"
        android:layout_alignEnd="@+id/textOfPassword"
        android:layout_marginEnd="31dp" />


</RelativeLayout>
